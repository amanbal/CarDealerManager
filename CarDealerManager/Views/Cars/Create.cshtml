@model CarDealerManager.Models.Car

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <main role="main" class="pb-3">
        <h1>Create</h1>

        <h4>Car</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CarBrandName" class="control-label"></label>
                        <input asp-for="CarBrandName" class="form-control" />
                        <span asp-validation-for="CarBrandName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CarModel" class="control-label"></label>
                        <input asp-for="CarModel" class="form-control" />
                        <span asp-validation-for="CarModel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CarYear" class="control-label"></label>
                        <input asp-for="CarYear" class="form-control" />
                        <span asp-validation-for="CarYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*
                        <label asp-for="Fuel" class="control-label"></label>
                        <select asp-for="Fuel" class="form-control"></select>
                        <span asp-validation-for="Fuel" class="text-danger"></span>
                        *@
                        <select asp-for="Fuel" asp-items="Html.GetEnumSelectList<FuelType>()"></select>
                    </div>
                    <div class="form-group">
                        @*
                        <label asp-for="Transmission" class="control-label"></label>
                        <select asp-for="Transmission" class="form-control"></select>
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                        *@
                        <select asp-for="Transmission" asp-items="Html.GetEnumSelectList<TransmissionType>()"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InStock" class="control-label"></label>
                        <input asp-for="InStock" class="form-control" />
                        <span asp-validation-for="InStock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupplierFK" class="control-label"></label>
                        <select asp-for="SupplierFK" class="form-control" asp-items="ViewBag.SupplierFK"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </main>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
