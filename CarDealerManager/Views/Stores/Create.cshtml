@model CarDealerManager.Models.Store

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <main role="main" class="pb-3">
        <h1>Create</h1>

        <h4>Store</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DateOfPurchase" class="control-label"></label>
                        <input asp-for="DateOfPurchase" class="form-control" />
                        <span asp-validation-for="DateOfPurchase" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WarrantyDuration" class="control-label"></label>
                        <input asp-for="WarrantyDuration" class="form-control" />
                        <span asp-validation-for="WarrantyDuration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CarFK" class="control-label"></label>
                        <select asp-for="CarFK" class="form-control" asp-items="ViewBag.CarFK"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerFK" class="control-label"></label>
                        <select asp-for="CustomerFK" class="form-control" asp-items="ViewBag.CustomerFK"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </main>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
