@model CarDealerManager.Models.Store

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <main role="main" class="pb-3">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Store</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateOfPurchase)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateOfPurchase)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.WarrantyDuration)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WarrantyDuration)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.car)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.car.CarBrandName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.customer.FullName)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </main>
</div>
